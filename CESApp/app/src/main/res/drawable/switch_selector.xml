<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the row is selected -->
    <item  android:state_enabled="true" android:state_checked="true" android:drawable="@color/colorPrimary" />
    <item  android:state_enabled="true" android:state_checked="false" android:drawable="@color/colorSwitchOff" />

    <item  android:state_enabled="false" android:state_checked="true" android:drawable="@color/colorPrimary" />
    <item  android:state_enabled="false" android:state_checked="false" android:drawable="@color/colorSwitchOff" />


</selector>